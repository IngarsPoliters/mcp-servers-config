{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "FS_ROOT": "${PWD}"
      }
    },
    "docker-hub-remote": {  // 2025 remote example: No local deps
      "type": "http",
      "url": "https://mcp.docker.com/hub",
      "oauth": true
    }
  }
}